<h1>All Articles</h1>
<% @articles.each do |article| %>
  <div>
    <%= link_to article.title, article_path(article) %>
    <br>
    <%= link_to 'Edit', edit_article_path(article) %>
    <p>
    Commenters: 
    <% article.comments.each do |comment| %>
      <%= comment.nice_commenter %>, 
    <% end %>
    </p>
  </div>
  <hr>
<% end %>

